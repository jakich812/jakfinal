pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                checkout scm // Пункт 68
            }
        }
        stage('Build') {
            steps {
                // Используем Gradle Wrapper (Пункт 69)
                sh 'chmod +x ./app/gradlew'
                sh './app/gradlew -p app clean build -x test'
            }
        }
        stage('Test') {
            steps {
                // Пункт 70, 79
                sh './app/gradlew -p app test'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'app/build/libs/*.jar' // Пункт 76
        }
    }
}
