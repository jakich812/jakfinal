pipeline {
    agent any
    
    tools {
        gradle 'Default' 
    }

    stages {
        stage('Git Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Используем gradle из tools. Флаг -p заходит в папку app
                sh 'gradle -p app clean build -x test'
            }
        }
        stage('Test') {
            steps {
                sh 'gradle -p app test'
            }
        }
    }
    post {
        success {
            // Сохраняем скомпилированный файл (Пункт 76 задания)
            archiveArtifacts artifacts: 'app/build/libs/*.jar'
        }
    }
}